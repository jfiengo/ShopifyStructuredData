# Shopify Configuration
SHOPIFY_SHOP_DOMAIN=your-shop-name
SHOPIFY_ACCESS_TOKEN=your-admin-api-token

# OpenAI Configuration (optional)
OPENAI_API_KEY=your-openai-api-key

# Feature Flags
ENABLE_AI_FEATURES=false
ENABLE_REVIEW_INTEGRATION=false

# Generation Settings
MAX_PRODUCTS=250
DEFAULT_OUTPUT_FORMAT=json

# Web App Settings (if using web interface)
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
FLASK_PORT=5000

# Database (for advanced features)
DATABASE_URL=sqlite:///schemas.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/schema_generator.log